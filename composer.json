{
    "autoload": {
        "psr-4": {"LOD\\": "src/"}
    },
    "require": {
        "monolog/monolog": "*",
        "vlucas/phpdotenv": "^5.6",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "scripts": {
        "phpstan": [
            "./vendor/bin/phpstan analyse src --level 5"
        ],
        "phpcs": [
            "./vendor/bin/phpcs --standard=PSR12 src"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf --standard=PSR12 src"
        ],
        "test": [
            "@phpcs",
            "@phpstan"
        ],
        "fix": [
            "@phpcbf"
        ]
    }
}
